# Personal information
set from = "matteo.golin@gmail.com"
set realname = "Matteo Golin"
set signature = ~/.config/mutt/signature

# IMAP settings
set imap_user = "matteo.golin@gmail.com"
set imap_pass = "`pass google/matteo.golin/neomutt`"

# SMTP settings
set smtp_url = "smtps://matteo.golin@smtp.gmail.com"
set smtp_pass = "`pass google/matteo.golin/neomutt`"

# Folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = /dev/null # Gmail automatically records sent mail
set trash = "+[Gmail]/Trash"

# Mailboxes
named-mailboxes inbox +INBOX
named-mailboxes sent "+[Gmail]/Sent Mail"
named-mailboxes drafts "+[Gmail]/Drafts"
named-mailboxes trash "+[Gmail]/Trash"

# Sorting
set sort = reverse-date
set sort_aux = last-date-received
set use_threads = yes

# Macros
source macros.muttrc

# Appearance
source ./colours/mail.muttrc
source sidebar.muttrc

# Encryption
source ./gpg.muttrc

# Aliases
source ./aliases/shorts.muttrc
